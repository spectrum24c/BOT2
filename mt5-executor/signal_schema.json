{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trading Signal",
  "type": "object",
  "properties": {
    "timestamp": {"type": "integer"},
    "symbol": {"type": "string"},
    "side": {"type": "string", "enum": ["BUY", "SELL"]},
    "volume": {"type": "number"},
    "price": {"type": "number"},
    "modelId": {"type": "string"},
    "model_version": {"type": "string"},
    "features_hash": {"type": "string", "pattern": "^sha256:[a-fA-F0-9]{4,}$"},
    "meta": {
      "type": "object",
      "properties": {
        "reason": {"type": "string"},
        "confidence": {"type": "number"}
      },
      "required": ["reason", "confidence"]
    }
  },
  "required": ["timestamp", "symbol", "side", "volume", "modelId", "model_version", "features_hash", "meta"]
}
